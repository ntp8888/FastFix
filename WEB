    <div class="toast" id="toast"></div>

    <script>
        /* ============ PRICE DATA ============ */
        const priceData = {
            electrician: { min: 300, max: 1500, label: '300 - 1,500', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            plumber: { min: 250, max: 1200, label: '250 - 1,200', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            aircon: { min: 400, max: 2500, label: '400 - 2,500', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            mechanic: { min: 500, max: 3000, label: '500 - 3,000', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            painter: { min: 1000, max: 5000, label: '1,000 - 5,000', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            builtin: { min: 2000, max: 10000, label: '2,000 - 10,000', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            renovation: { min: 3000, max: 20000, label: '3,000 - 20,000', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' },
            cctv: { min: 1500, max: 8000, label: '1,500 - 8,000', desc: '‡∏ö‡∏≤‡∏ó / ‡∏Ñ‡∏£‡∏±‡πâ‡∏á' }
        };

        /* ============ HEADER SCROLL ============ */
        const header = document.getElementById('header');
        window.addEventListener('scroll', () => {
            header.classList.toggle('scrolled', window.scrollY > 50);
        });

        /* ============ MOBILE MENU ============ */
        const menuBtn = document.getElementById('menuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const closeMenu = document.getElementById('closeMenu');

        menuBtn.addEventListener('click', () => mobileMenu.classList.add('open'));
        closeMenu.addEventListener('click', () => mobileMenu.classList.remove('open'));
        document.querySelectorAll('.mobile-link').forEach(link => {
            link.addEventListener('click', () => mobileMenu.classList.remove('open'));
        });

        /* ============ UPDATE PRICE ============ */
        function updatePrice() {
            const select = document.getElementById('serviceType');
            const amount = document.getElementById('priceAmount');
            const unit = document.getElementById('priceUnit');
            const val = select.value;
            if (val && priceData[val]) {
                amount.textContent = priceData[val].label;
                unit.textContent = priceData[val].desc;
                amount.style.animation = 'none';
                void amount.offsetHeight;
                amount.style.animation = 'pulse .4s ease';
            } else {
                amount.textContent = '-';
                unit.textContent = '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£';
            }
        }

        /* ============ SELECT SERVICE FROM CARD ============ */
        function selectService(type) {
            const select = document.getElementById('serviceType');
            select.value = type;
            updatePrice();
        }

        /* ============ FORM SUBMIT ============ */
        function submitForm(e) {
            e.preventDefault();
            const order = {
                id: Date.now().toString(36) + Math.random().toString(36).slice(2, 6),
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                address: document.getElementById('address').value,
                service: document.getElementById('serviceType').value,
                details: document.getElementById('details').value,
                status: 'new',
                timestamp: new Date().toISOString()
            };
            const orders = JSON.parse(localStorage.getItem('fastfix_orders') || '[]');
            orders.unshift(order);
            localStorage.setItem('fastfix_orders', JSON.stringify(orders));
            showToast('‚úÖ ‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∏‡∏ì ' + order.name + '! ‡πÄ‡∏£‡∏≤‡∏à‡∏∞‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏Å‡∏•‡∏±‡∏ö‡∏†‡∏≤‡∏¢‡πÉ‡∏ô 15 ‡∏ô‡∏≤‡∏ó‡∏µ');
            e.target.reset();
            document.getElementById('priceAmount').textContent = '-';
            document.getElementById('priceUnit').textContent = '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£';
        }

        /* ============ TOAST ============ */
        function showToast(msg) {
            const toast = document.getElementById('toast');
            toast.textContent = msg;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 4000);
        }

        /* ============ SCROLL ANIMATIONS ============ */
        const observerOptions = { threshold: 0.15, rootMargin: '0px 0px -40px 0px' };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);
        document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
    </script>
</body>

</html>
